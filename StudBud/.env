# Application Settings
APP_NAME="Atlas SkillTech Placement Assistant"
DEBUG=True
ENVIRONMENT=development

# Security
SECRET_KEY=YourSecretKeyHere123!@#
JWT_SECRET=YourJWTSecretHere456!@#
JWT_EXPIRY=12  # hours

# Ollama Settings
OLLAMA_HOST=http://localhost:11434
MODEL_NAME=gemma:27b
CONTEXT_LENGTH=8192
TEMPERATURE=0.7
TOP_P=0.9
TOP_K=40

# File Paths
DATA_DIR=./data
BACKUP_DIR=./data/backups
CACHE_DIR=./data/cache
STATIC_DIR=./static

# Session Settings
SESSION_EXPIRY=3600  # 1 hour in seconds
MAX_UPLOAD_SIZE=5242880  # 5MB
MAX_MEMORY_MESSAGES=50

# Database Settings
DEFAULT_ADMIN_EMAIL=admin@atlas.edu
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_STUDENT_EMAIL=student@atlas.edu
DEFAULT_STUDENT_PASSWORD=student123

# UI Customization
THEME=light
PRIMARY_COLOR=#3b82f6
SECONDARY_COLOR=#1e40af
ENABLE_ANIMATIONS=true

# Feature Flags
ENABLE_CHAT_HISTORY=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_FILE_UPLOAD=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # seconds